{
    "version": 2,
    "builds": [
      {
        "src": "client/**/*",
        "use": "@vercel/static-build",
        "outDir": ".vercel/output/static"
      },
      {
        "src": "server/**/*.js",
        "use": "@vercel/node",
        "config": {
          "build": "server/app/index.js"
        }
      }
    ],
    "routes": [
      {
        "source": "/app(.*)",
        "destination": "/server/app/index.js"
      },
      {
        "source": "*!",
        "destination": "/.vercel/output/static/index.html"
      }
    ]
  }
  